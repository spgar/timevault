{
    "manifest_version": 2,

    "name": "timevault",
    "description": "Shows some information over time.",
    "version": "1.0",

    "browser_action": {
        "default_icon": "icon.png"
    },

    "background": {
        "scripts": ["background.js"],
        "persistent": false
    },

    "options_page": "options.html",

    "permissions": [
        "storage",
        "alarms"
    ]
}
